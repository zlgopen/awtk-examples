<view w="100%" h="100%" style="weather_bg_color">
  <view x="0" y="0" w="100%" h="100%" >
    <label name="weather_degree" style="weather_white_43" x="43" y="80" w="45" h="30" text="28" />
    <image x="88" y="75" w="11" h="12" image="weather_degree" />
    <image x="99" y="97" w="25" h="21" image="weather_sun" />

    <row x="43" y="125" w="88" h="48">
      <column x="0" y="0" w="100%" h="50%">
        <label style="weather_white_18" x="0" y="0" w="50%" h="100%" text="明天" />
        <image x="65%" y="-3" w="25" h="21" image="weather_cloudy" />
      </column>
      <column x="0" y="50%" w="100%" h="50%">
        <label style="weather_white_18" x="0" y="0" w="50%" h="100%" text="后天" />
        <image  x="64%" y="0" w="25" h="21" image="weather_rain" />
      </column>
    </row>

    <column x="130" y="75" w="70" h="20">
      <label style="weather_sky_blue_left_18" x="0" y="0" w="50%" h="100%" text="AQI" />
      <label name="aqi" style="weather_sky_blue_right_18" x="50%" y="0" w="50%" h="100%" text="200" />
    </column>
      
    <column x="130" y="98" w="70" h="20">
      <label name="now_min_temp" style="weather_white_right_18" x="0" y="0" w="30%" h="100%" text="20" />
      <image x="30%" y="0" w="7" h="7" image="weather_degree" draw_type="scale_auto" />
      <label style="weather_white_18" x="38%" y="0" w="30%" h="100%" text="~" />
      <label name="now_max_temp" style="weather_white_right_18" x="65%" y="0" w="30%" h="100%" text="30" />
      <image x="95%" y="0" w="7" h="7" image="weather_degree" draw_type="scale_auto" />
    </column>

    <column x="130" y="126" w="70" h="20">
      <label name="tom_min_temp" style="weather_white_right_18" x="0" y="0" w="30%" h="100%" text="20" />
      <image x="30%" y="0" w="7" h="7" image="weather_degree" draw_type="scale_auto" />
      <label style="weather_white_18" x="38%" y="0" w="30%" h="100%" text="~" />
      <label name="tom_max_temp" style="weather_white_right_18" x="65%" y="0" w="30%" h="100%" text="30" />
      <image x="95%" y="0" w="7" h="7" image="weather_degree" draw_type="scale_auto" />
    </column>

    <column x="130" y="151" w="70" h="20">
      <label name="after_tom_min_temp" style="weather_white_right_18" x="0" y="0" w="30%" h="100%" text="20" />
      <image x="30%" y="0" w="7" h="7" image="weather_degree" draw_type="scale_auto" />
      <label style="weather_white_18" x="38%" y="0" w="30%" h="100%" text="~" />
      <label name="after_tom_max_temp" style="weather_white_right_18" x="65%" y="0" w="30%" h="100%" text="30" />
      <image x="95%" y="0" w="7" h="7" image="weather_degree" draw_type="scale_auto" />
    </column>
  </view>

  <color_button style="weather_bg_top" x="c" y="0" w="156" h="60" l="14" orientation_top="false" button="false">
    <label style="weather_white_25" x="m" y="m:10" w="100%" h="100%" text="广州市"/>
  </color_button>

  <color_button style="weather_bg_bottom" x="c" y="b" w="154" h="60" l="13" orientation_top="true" button="false">
    <column x="c:10" y="m:-10" w="100" h="100%">
      <label style="weather_sky_blue_18" x="0" y="0" w="50%" h="100%" text="更新时间:"/>
      <digit_clock style="weather_sky_blue_18" x="50%" y="0" w="50%" h="100%" format="hh:mm" />
    </column>
  </color_button>
</view>


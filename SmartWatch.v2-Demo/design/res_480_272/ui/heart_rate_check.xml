<window x="c" y="m" w="240" h="240" name="heart_rate_check" open_anim_hint="slide_left(easing=sin_inout,start_alpha=0,end_alpha=200)" style:normal:bg_color="#010101" theme="heart_rate">
  <gesture name="heart_rate_check_gesture" x="c" y="m" w="240" h="240">
    <label name="show" x="c" y="37" w="86" h="21" style="check_top" tr_text="正在检测"/>
    <image_animation name="image_animation" x="c" y="m" w="146" h="146" image="heart_" start_index="0" end_index="2" format="%s%05d" auto_play="true" interval="100"/>
    <label name="bottom" x="c" y="190" w="119" h="16" style="check_bottom" tr_text="请保持手腕平衡"/>
  </gesture>
</window>
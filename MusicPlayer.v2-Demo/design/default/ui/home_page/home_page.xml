<window name="home_page" style:normal:bg_image="bg_main">
  <view name="title_view" x="0" y="0" w="100%" h="11%">
    <label name="dev_name" x="10" y="m" w="147" h="100%" style="left" text="Music Player"/>
    <digit_clock name="digit_clock" x="r:10" y="m" w="160" h="100%" format="YYYY-MM-DD hh:mm:ss" style="right"/>
  </view>
  <view name="control_view" x="0" y="409" w="100%" h="71">
    <view name="view" x="82%" y="m" w="16%" h="100%" children_layout="default(c=2,r=1)">
      <button name="btn_play_mode" repeat="0" enable_long_press="false" style="s_play_mode_clicle" text=""/>
      <button name="btn_play_list" repeat="0" enable_long_press="false" style="s_play_list" text=""/>
    </view>
    <view name="view" x="2%" y="m" w="27%" h="100%" children_layout="default(c=3,r=1)">
      <button name="btn_prve" repeat="0" enable_long_press="false" style="s_play_prev" text=""/>
      <button name="btn_play" repeat="0" enable_long_press="false" style="s_play" text=""/>
      <button name="btn_next" repeat="0" enable_long_press="false" style="s_play_next" text=""/>
    </view>
    <view name="view" x="30%" y="m" w="50%" h="100%">
      <label name="slider_min" x="0" w="33" h="100%" style:normal:text_color="#FFFFFF" y="m" text="00:00"/>
      <label name="slider_max" x="r:5" w="34" h="100%" style:normal:text_color="#FFFFFF" y="m" text="00:00"/>
      <slider name="play_slider" x="43" w="75%" h="100%" bar_size="3" dragger_size="10" y="m" style="slider_h" dirty_rect_tolerance="" value="0"/>
    </view>
  </view>
  <clip_view name="cover_view" x="0" y="90" w="400" h="300">
    <view name="yellow" x="c" y="m" w="400" h="300">
      <image name="song_y" x="c" y="m" w="188" h="188" image="yellow"/>
      <image name="Vinyl" x="c" y="m" w="300" image="Vinyl" h="300"/>
    </view>
    <view name="see_you_again" x="-400" y="m" w="400" h="300">
      <image name="song_q" x="c" y="m" w="188" h="188" image="see_you_again"/>
      <image name="Vinyl" x="c" y="m" w="300" image="Vinyl" h="300"/>
    </view>
    <view name="let_it_go" x="-400" y="m" w="400" h="300">
      <image name="song_n" x="c" y="m" w="188" h="188" image="let_it_go"/>
      <image name="Vinyl" x="c" y="m" w="300" image="Vinyl" h="300"/>
    </view>
  </clip_view>
  <guage_pointer name="vinyl_head" x="150" y="50" w="49" h="121" image="pointer" anchor_x="10px" anchor_y="9px" angle="-35"/>
  <view name="lrc_title_view" x="53%" y="12%" w="40%" h="18%">
    <label name="song_name" x="0" y="20%" w="100%" h="40%" style="s_song_name" text="Label"/>
    <label name="song_artist" x="0" y="50%" w="320" h="34" style="s_artist_name" text="Label"/>
  </view>
  <image name="lrc_rule" x="400" y="140" h="2" image="lrc_rule" w="350"/>
  <list_view name="lrc_view" x="400" y="153" h="231" default_item_height="25" item_height="25" style:normal:border_color="#00000000" style:normal:bg_color="#00000000" w="350">
    <scroll_view name="lrc_scroll" x="0" y="0" w="100%" h="100%" yslidable="true"/>
  </list_view>
  <view name="setting_view" x="r:10" y="13%" w="5%" h="30%" children_layout="default(c=1,r=3)">
    <button name="btn_anim_switch" repeat="0" enable_long_press="false" style="s_anim_switch_p" text=""/>
    <button name="btn_equalizer" repeat="0" enable_long_press="false" style="s_eq" text=""/>
    <button name="btn_advanced" repeat="0" enable_long_press="false" style="s_advanced" text=""/>
  </view>
</window>
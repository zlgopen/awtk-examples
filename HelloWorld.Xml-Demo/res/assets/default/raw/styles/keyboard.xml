<button>
  <style name="highlight" border_color="#a0a0a0"  text_color="black">
    <normal     bg_color="#a8b0b0" />
    <pressed    bg_color="#c0c0c0" />
    <over       bg_color="#e0e0e0" />
    <disable    bg_color="gray" text_color="#d0d0d0" />
  </style>
  
  <style name="candidates" text_color="black">
    <normal  />
    <pressed    bg_color="#c0c0c0" border_color="#a0a0a0"/>
    <over       bg_color="#e0e0e0" border_color="#a0a0a0"/>
  </style>
</button>

<candidates>
  <style name="default">
    <normal     bg_color="gray" />
  </style>
</candidates>

<keyboard>
  <style name="default">
    <normal bg_color="#cfd4da"/>
  </style>
</keyboard>
